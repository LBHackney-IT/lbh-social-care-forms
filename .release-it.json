{
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "chore: release v${version} [skip ci]"
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "types": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Bug Fixes"
        },
        {
          "type": "chore",
          "section": "Chores"
        },
        {
          "type": "docs",
          "section": "Documentation"
        }
      ]
    }
  }
}
